@model Waad_Academy_School.Models.LoginModel
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
    <div class="form-horizontal col-lg-6 col-md-offset-3 table-bordered " style="background:lightgray">
        <h2 class="text-center">Login</h2>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-3">User Name</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Password</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3"></label>
            <div class="col-md-8">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            @*@Html.ActionLink("Export", "Export", null, new { schlid = 4 }, htmlAttributes: new { @class = "btn btn-default" });*@
        </div>
    </div>
}
<script src='https://code.jquery.com/jquery-3.3.1.min.js'></script>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{

<script type="text/javascript">
        $(document).ready(function()
        {
            alert("@ViewBag.Message");
        })
</script>
}